@page
@model OPM.SFS.Web.Pages.Student.LoginModel
@{
    Layout = "_NoSideMenu";
}

<div class="grid-container-widescreen">
    <div class="grid-row">
        <div class="grid-col infopage participate">
            <h2 class="login-header">Students:  <i>Login</i></h2>
            <div asp-validation-summary="All">
            <span>Login attempt was not successful. See below for errors.</span>
        </div>
        </div>
        
    </div>
     @if(Model.Data != null && Model.Data.IsAccountInactive){
     <div class="usa-alert usa-alert-error" role="alert">
              <div class="usa-alert-body">
                <h3 class="usa-alert-heading">Error - Account Inactive</h3>
                <p class="usa-alert-text">
                 Looks like you haven't signed in recently - your SFS account is inactive.
                  <a href="@Model.Data.ReactivateUrl">Reactivate your account</a> 
                </p>
              </div>
            </div>
     }

    @if (Model.Data.ShowSuccessEmail)
    {
        <div class="usa-alert usa-alert-info">
          <div class="usa-alert-body">
            <p class="usa-alert-text">
             We sent you an email to reactivate your account. Please check your inbox and/or junk/spam. Click the link in the email to reactivate your account. 
             If you do not receive an email within 24 hours please contact <a href="mailto:sfs@opm.gov">sfs@opm.gov</a>  for assistance
            </p>
          </div>
        </div>
    }
</div>
<br/>
<div class="grid-container-widescreen">
    <div class="grid-row grid-gap">    
        <div class="tablet:grid-col-6">          

            <ul class="usa-accordion-bordered">
                <li>
                    <button class="usa-accordion-button" aria-expanded="false" aria-controls="b-a1">
                        Instruction
                    </button>

                    <div id="b-a1" class="usa-accordion-content" aria-hidden="false">
                        <div class="infopage participate">
                            <div id="container" style="padding-right:20px;">
                                <div>
                                    <p>
                                        SFS is a U.S. Government system to be used only in the manner authorized.  You are authorized
                                        to use this system's menus, controls, and features to do any and all of the following as a SFS student participant,
                                        subject to any limitations that may be imposed, such as due dates and deadlines:
                                    </p>
                                    <ul>
                                        <li>Prepare, complete, modify, save, and print resume and job search activity report.</li>
                                        <li>Prepare, complete, and save internship and post graduation commitments.</li>
                                        <li>View and print agency official contact information.</li>
                                    </ul>
                                    <p>
                                        <strong>
                                            Only Students previously accepted by a participating university and enrolled in the Scholarship For
                                            Service (SFS) Program may register and gain access to this system.
                                        </strong>
                                        If you are an SFS enrollee, please
                                        register first by selecting <a href="/Student/Registration" title="Student Registration">here</a>.
                                        If you are not an SFS enrollee, please select
                                        <a href="/Student/FAQs" title="Student Program Guidance">here</a> for information on the SFS Program.<br>
                                        <br>

                                        Login access to the site is through Login.gov. All new users must first setup their Login.gov account by clicking the link provided below. Returning users can access the site thru the same link. 
                                        If you encounter a problem creating your login account or logging in, please send an email to the SFS Program Office at <a href="mailto:sfs@opm.gov" title="Email the SFS Program Office">sfs@opm.gov</a>.
                                        <br>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
            <div>             
                <a href="?handler=Transition">
                      <img src="/img/logingov-signin.png" alt="Login" style="border-width:0px;height: 40%; background: none;">
                 </a>            
            </div>           
        </div>
    <div class="tablet:grid-col-6">
        <div class="infopage participate">
            <div id="container" style="padding-right:20px;">
