@page "{code?}"
@model ErrorModel
@{
    ViewData["Title"] = "Error";
    Layout = "_BasicLayout";
}
<div style="margin-left:50px;">
    @if(Model.ErrorStatusCode == "404")
    {
        <div style="text-align:center">
            <h1>Page Not Found.</h1>
            <p>The page that your are looking for does not exist.</p>
        </div>
    }
    else
    {   
        <div style="text-align:center">
            <h1>A System Error Has Occurred. </h1>
            <p id="pError" runat="server">The system has encountered a problem. Please contact the System Administrator at <a href="mailto:sfs@opm.gov">sfs@opm.gov</a> to report the problem.</p>
        </div>
    }
</div>
