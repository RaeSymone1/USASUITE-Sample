<!doctype html>

<html lang="en">
<head runat="server">
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta property="og:title" content="SFS">
	<meta name="description" content="Start your cybersecurity career with the U.S. government">
	<meta property="og:description" content="Start your cybersecurity career with the U.S. government">


	<title>CyberCorps&#174;: Scholarship for Service</title>
	<link rel="stylesheet" href="/css/sfsbase.css" />
	<script asp-add-nonce src="/lib/agGrid/ag-grid-enterprise.min.noStyle.js"></script>
	<!-- Include the core CSS, this is needed by the grid -->
	<link rel="stylesheet" href="/lib/agGrid/ag-grid-enterprise.css" />
	<!-- Include the theme CSS, only need to import the theme you are going to use -->
	<link rel="stylesheet" href="/lib/agGrid/ag-theme-alpine-enterprise.css" />

</head>
<body>
	<a class="usa-skipnav" href="#main-content">Skip to main content</a>
	<partial name="_OPMTopBanner" />
	@if (User.Identity.IsAuthenticated && User.IsInRole("PI"))
	{
		<partial name="_PIHeader" />
	}
	else
	{
		<partial name="_Header" />
	}
	
	<div class="usa-overlay"></div>
	<div class="usa-hero interior"></div>

	<main class="usa-grid usa-section usa-content usa-layout-docs grid-extra-wide" id="main-content">
		<aside id="StudMenuArea" class="usa-width-one-fourth usa-width-one-fourth usa-layout-docs-sidenav">			
			<ul class="usa-sidenav-list" id="ulStudentOverview">
				<li><a href="/">SFS Main</a></li>
				<li><a href="/Academia/Login">Principal Investigator Login</a></li>
				<li><a href="/Academia/Register">Registration</a></li>
				<li><a href="/Academia/FAQs">FAQs</a></li>
				<li><a href="/Academia/Resources">Resources</a></li>
			</ul>			
		</aside>
		<section class="usa-width-three-fourths usa-layout-docs-main_content">
			<div id="main-content-wrapper">
				@RenderBody()
			</div>
		</section>
	</main>

	<partial name="_Footer" />
	<script src="/js/sfsbasebundle.js"></script>
	<script src="/js/menuCollapse.js"></script>
	@RenderSection("scripts", required: false)
	<partial name="_SessionExpireAlert" />
</body>
</html>